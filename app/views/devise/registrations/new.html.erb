<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
  
  <%= f.input :email %>
  <%= f.input :username %>
  <%= f.input :name %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :gender, :collection => [["Male", "Male"], ["Female", "Female"]], :prompt => false %>
  <%= f.input :dob, :label => "Date of Birth", :as => :date, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12, :order => [:day, :month, :year], :prompt => {:day => 'Day', :month => 'Month', :year => 'Year'} %>

  <div class="form-actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<%= render :partial => "devise/shared/links" %>
