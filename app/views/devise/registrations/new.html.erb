<div class="row">
  <div class="small-12 large-12 columns">

    <h2>Sign up</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal"}) do |f| %>
      
      <div class="row">
        <div class="small-12">
          <%= devise_error_messages! %>
        </div>
      </div>
      
      <div class="row">
        <div class="small-12">
          <div class="row">
            <div class="small-3 columns">
              <%= f.label :email, class: 'right inline' %>
            </div>
            <div class="small-9 columns">
              <%= f.input_field :email, :placeholder => "david@example.com"%>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="small-12">
          <div class="row">
            <div class="small-3 columns">
              <%= f.label :username, class: 'right inline' %>
            </div>
            <div class="small-9 columns">
              <%= f.input_field :username, :placeholder => "Davidoff"%>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="small-12">
          <div class="row">
            <div class="small-3 columns">
              <%= f.label :name, class: 'right inline' %>
            </div>
            <div class="small-9 columns">
              <%= f.input_field :name, :placeholder => "David"%>
            </div>
          </div>
        </div>
      </div>
      <% if f.object.password_required? %>
        <div class="row">
          <div class="small-12">
            <div class="row">
              <div class="small-3 columns">
                <%= f.label :password, class: 'right inline' %>
              </div>
              <div class="small-9 columns">
                <%= f.input_field :password, :placeholder => "Password"%>
              </div>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="small-12">
            <div class="row">
              <div class="small-3 columns">
                <%= f.label :password_confirmation, class: 'right inline' %>
              </div>
              <div class="small-9 columns">
                <%= f.input_field :password_confirmation, :placeholder => "Confirm Password"%>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="row">
        <div class="small-12">
          <div class="row">
            <div class="small-3 columns">
              <%= f.label :gender, class: 'right inline' %>
            </div>
            <div class="small-9 columns">
              <%= f.input :gender, :collection => [["Male", "Male"], ["Female", "Female"]], :prompt => false, label: false %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="small-12">
          <div class="row">
            <div class="small-3 columns">
              <%= f.label :dob, class: 'right inline', label: "Date of birth" %>
            </div>
            <div class="small-9 columns">
              <%= f.input :dob, :label => "Date of Birth", :as => :date, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12, :order => [:day, :month, :year], :prompt => {:day => 'Day', :month => 'Month', :year => 'Year'}, label: false %>
            </div>
          </div>
        </div>
      </div>
      &nbsp;
      <div class="row">
        <div class="small-12">
          <div class="row">
            <div class="small-3 columns">
              
            </div>
            <div class="small-9 columns">
              <%= f.submit "Sign up", class: "small button" %>
            </div>
          </div>
        </div>
      </div>

    <% end %>
    <div class="row">
      <div class="small-12">
        <%= render :partial => "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
