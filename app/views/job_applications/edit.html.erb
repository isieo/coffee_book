<div class="row">
  <div class="small-12 large-12 columns">
	  <h2> Rejecting <%= @application.username %>'s application</h2>
	  <hr>
    <%= simple_form_for(@application, :url => job_job_applications_path, :html => { :method => :put }) do |f| %>
      <%= f.input :reject_reason, :as => :text, :input_html => { :class => 'input-details' }%>
      <%= f.input :status, :as => :hidden, :input_html => { :value => "rejected"  }%>
      <%= f.submit 'Reject', class: "button"%>
      <%= link_to "Back", :back, class: "button secondary"%>
    <% end %>
  </div>
</div>

