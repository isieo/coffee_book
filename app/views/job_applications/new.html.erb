<%= render :partial => "shared/left_navigator", :locals => {:current_link => "application"} %>
<div class="content-section">
	<h1 class="content-title tjob"> <i>&nbsp;</i> Applying for <%= @job.title %></h1>
	<div class="company-details">
    <%= simple_form_for(@application, :url => job_job_applications_path) do |f| %>
      <%= f.input :applicant_description, :as => :text, :input_html => { :class => 'inputdetails' }, :label => "Tell us more about yourself" %>
      <%= button_tag(type: 'submit', class: "btn save") do %>
        <span>save</span>
      <% end %>
      <%= link_to :back, :class => "btn back" do%>
        <span>back</span>
      <% end %>
    <% end %>
  </div>
</div>	

