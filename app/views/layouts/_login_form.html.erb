<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-inline"}) do |f| %>

  <%= f.text_field :email, :class => "input-small", :placeholder => "Email" %>
  <%= f.text_field :password, :class => "input-small", :placeholder => "Password", :type => "password" %>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox">
      <%= f.check_box :remember_me, :checked => false %>
      Remember Me
    </lable>
  <% end -%>

  <%= f.submit "Sign in", :class => "btn btn-primary" %>
  <%= link_to "Sign up", new_user_registration_path, :class => "btn btn-primary" %>
  
<% end %>
