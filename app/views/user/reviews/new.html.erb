<%= render :partial => "user/accounts/account_menu", :locals => {:current_link => "review"}  %>
<h2>New Review</h2>
<%= simple_form_for(@review, :url => user_account_reviews_path(current_user), :html => { :class => "form-horizontal" }) do |f| %>
  
  <%= f.input :comment %>
  
  <div class="form-actions">
    <%= f.submit "Create", :class => "btn btn-primary"%>
    <%= link_to "Back", :back, :class => "btn btn-info" %>
  </div>
<% end %>
