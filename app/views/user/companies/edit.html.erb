<%= render :partial => "user/accounts/account_menu" %>
<h2>Update Company</h2>
<%= simple_form_for(@company, :url => user_account_company_path(current_user, @company), :html => { :mothod => :put, :class => "form-horizontal" }) do |f| %>
  
  <%= render :partial => 'form', :locals => {:f => f} %>
  
  <div class="form-actions">
    <%= f.submit "Update", :class => "btn btn-primary"%>
    <%= link_to "Back", :back, :class => "btn btn-info" %>
  </div>
<% end %>
