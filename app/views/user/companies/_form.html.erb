<%= f.input :name, :input_html => { :class => 'inputdetails' }, :wrapper => false %>
<%= f.input :address, :hint => "Your address must be readable by google", :input_html => { :class => 'inputdetails' }  %>
<%= f.input :contact_mobile, :input_html => { :class => 'inputdetails' } %>
<%= f.input :contact_office, :input_html => { :class => 'inputdetails' } %>
<%= f.input :coordinates_latitude, :input_html => { :class => 'inputdetails' } %>
<%= f.input :coordinates_longitude, :input_html => { :class => 'inputdetails' } %>

<% if f.object.cover_image_uid %>
  <%= image_tag (@company.cover_image.url), :size => "100x100", :class => "profile-img" %>
<% else %>
  <%= image_tag("default-company-photo.png", :size => "100x100", :class => "profile-img")%>
<% end %>

<%= f.label :cover_image, "Company Photo", :for=>"cover_image" %>
<%= f.file_field :cover_image, :class => "photo-chosen", :id=>'file' %>
