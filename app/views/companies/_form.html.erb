<%= simple_form_for(@company, :html => { :class => "form-horizontal"}) do |f| %>

  <%= f.input :name %>
  <%= f.input :address_street1 %>
  <%= f.input :address_street2 %>
  <%= f.input :post_code %>
  <%= f.input :state %>
  <%= f.input :country, :priority => [ "Malaysia" ] %>
  <%= f.input :contact_mobile %>
  <%= f.input :contact_office %>

  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
