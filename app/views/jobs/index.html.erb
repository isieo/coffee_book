<h1>Listing jobs</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Position</th>
    <th>Location</th>
    <th>Salary</th>
    <th>Start Date</th>
    <th>How Many Days</th>
    <th>Time</th>
    <th>Requirements</th>
    <th></th>
  </tr>

  <% if @jobs.present? %>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.position %></td>
        <td><%= job.location %></td>
        <td><%= job.salary %></td>
        <td><%= job.date %></td>
        <td><%= job.day_amount %></td>
        <td><%= job.time %></td>
        <td><%= job.requirements %></td>
        <td><%= link_to 'Show', job %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td colspan="9">Sorry No Results Found.</td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Job', new_job_path %>
