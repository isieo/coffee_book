<h1>Listing jobs</h1>

<% if @jobs.present? %>
  <table class="table">
    <tr>
      <th>Title</th>
      <th>Address</th>
      <th>Salary Per day</th>
      <th>Start Date</th>
      <th>How Many Days</th>
      <th></th>
    </tr>
  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.address.truncate(30) %></td>
      <td>
          <% if job.salary == 0 || job.salary.nil? %>
            N/A
          <% else %>
            <%= number_to_currency(job.salary, :format => "RM %n") %>
          <% end %>
      </td>
      <td><%= job.date.to_date %></td>
      <td><%= job.day_amount %> Days</td>
      <td><%= link_to 'See More', job, :class => "btn btn-primary" %></td>
    </tr>
  <% end %>

<% else %>
  <tr>
    <td colspan="9">Sorry No Results Found.</td>
  </tr>
<% end %>
</table>
