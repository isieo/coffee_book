<%= simple_form_for(@job, :html => { :class => "form-horizontal"}) do |f| %>
  <%= f.input :title %>
  <%= f.input :post %>
  <%= f.input :location %>
  <%= f.input :salary %>
  <%= f.input :start_date, :input_html => { :class => 'datepickers' } %>
  <%= f.input :end_date, :input_html => { :class => 'datepickers' } %>
  <%= f.input :time %>
  <%= f.input :requirements %>

  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
