<h1>Listing jobs</h1>

<% @jobs.each do |job| %>
  <table class="table">
    <tr>
      <th>Title</th><td><%= job.title %></td>
    </tr>
    <tr>
      <th>Location</th><td><%= job.location %></td>
    </tr>
    <tr>
      <th>Salary</th><td><%= job.salary %></td>
    </tr>
    <tr>
      <th>Start Date</th><td><%= job.start_date %></td>
    </tr>
    <tr>
      <th>End Date</th><td><%= job.end_date %></td>
    </tr>
    <tr>
      <th></th><td><%= link_to 'Apply', root_path, :class => "btn btn-primary" %></td>
    </tr>
  </table>
<% end %>
