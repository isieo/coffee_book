<h1>Listing jobs testing interface</h1>
<table class="table">
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Salary</th>
    <th>Start Date</th>
    <th>How Many Days</th>
    <th></th>
  </tr>
<% @jobs.each do |job| %>
  <tr>
    <td><%= job.title %></td>
    <td><%= job.location %></td>
    <td>
        <% if job.salary == 0 || job.salary.nil? %>
          N/A
        <% else %>
          <%= number_to_currency(job.salary, :format => "RM %n") %> Per day
        <% end %>
    </td>
    <td><%= job.date.to_date %></td>
    <td><%= job.day_amount %> Days</td>
    <td><%= link_to 'Apply', job, :class => "btn btn-primary" %></td>
  </tr>
<% end %>
</table>
