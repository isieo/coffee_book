<%= render :partial => "shared/google_map_js", :locals =>{ :user => @user} %>
<%#= render :partial => "shared/login_form" %>
<div class="search_section ">
  <%= form_tag search_path, :method => "get" do |f| %>
    <div class="search-col">
      <span class="inputtitle _block">You can search for any keyword ?:</span>
      <%= text_field_tag :search,"#{params[:search]}",  :class => 'inputfield _keywords', :placeholder => 'Search...' %>
    </div>
    
    <%= submit_tag("Search", :class => "btn search")%>
  <% end %>
</div>

<div class="gmap_section shadow-border">
	<div class="gmap">
	  <div id="map_canvas" class="map-container" style="width:680px; height:390px;"></div>
	</div>

	<div class="opt-signup">
    <%if !user_signed_in?%>
		  <p><strong>Get started just as simple as clicking on sign in with facebook</strong></p>
	    <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
         <%= link_to "", omniauth_authorize_path(resource_name, provider), :class => "facebook-btn", :id => "facebook" %>
        <% end -%>
      <% end -%>
      <p><strong>or <%= link_to "create an account", login_path %> if you dont have facebook</strong></p>
    <% else %>
		  <p><strong>Welcome! Listed below is the job nearest to you!</strong></p>
		  <ol>
		    <% @marker_array.each do |j|%>
		      <li><%= j[3] %> (<%= '%.2f' % current_user.distance_to([j[1],j[2]], :km)%> KM)</li>
		    <% end %>
		  </ol>
    <% end %>
    <hr style="height:20px;">
	</div>
</div>	

<div class="ads_section">
	<div class="_col _left">
    <%= link_to "Job List", jobs_path, :class => "img left shadow-border" %>
	</div>

	<div class="_col _middle">
    <%= link_to "Companies List", companies_path, :class => "img left shadow-border" %>
	</div>
	<div class="_col _right">
    <%= link_to "Users List", users_path, :class => "img left shadow-border" %>
	</div>

</div>


