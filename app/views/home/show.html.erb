<%= render :partial => "shared/google_map_js", :locals =>{ :user => @user} %>
<%#= render :partial => "shared/login_form" %>

<div class="row">
  <div class="small-12 large-12 columns" style= "text-align: center;">
    <h1>8vice finds part time jobs near you</h1>
    <h4 class="subheader">8vice will help you find the part time job that suits your needs, from location, to the types of jobs you're looking for.</h4>
  </div>
</div>

<div class="row">
  <div class="small-12 large-12 columns">
    <%= form_tag search_path, :method => "get" do |f| %>
      <fieldset>
        <legend>Search</legend>
          <div class="row">
            <div class="small-9 columns">
              <%= text_field_tag :search,"#{params[:search]}", :placeholder => 'You can search for any keyword' %>
            </div>
            <div class="small-3 columns">
              <%= submit_tag("Search", :class => "button prefix")%>
            </div>
          </div>
      </fieldset>
    <% end %>
  </div>
</div>

<div class="row">
	<div class="small-12 large-12 columns panel">
	  <div id="map_canvas" style="width:100%; height:400px;"></div>
	</div>
	<hr>
</div>	

<ol class="joyride-list" data-joyride>
  <li data-id="sign-up" data-text="Okay">
    <p>Sign up or create<br /> an account for free!</p>
  </li>
</ol>

<script type="text/javascript">
  $(document).foundation('joyride', 'start');
</script>
