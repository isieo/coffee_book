<div class="row">

  <div class="small-6 large-6 columns">
    <h2>Sign in</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      
      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-3 columns">
              <%= f.label :login, class: 'right inline' %>
            </div>
            <div class="small-9 columns">
              <%= f.input_field :login, :placeholder => "Email/Username"%>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-3 columns">
              <%= f.label :password, class: 'right inline' %>
            </div>
            <div class="small-9 columns">
              <%= f.input_field :password, :placeholder => "Password", :type => "password"%>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-12 columns">
              <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                Remember Me
              <% end -%>
            </div>
          </div>
        </div>
      </div>
      
      <%= f.submit "Sign in", class: "small button" %>
    <% end %>
  </div>
  
  <div class="small-6 large-6 columns">
    <h2>Sign up</h2>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-4 columns">
              <%= f.label :email, class: 'right inline' %>
            </div>
            <div class="small-8 columns">
              <%= f.input_field :email, :placeholder => "example@google.dev"%>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-4 columns">
              <%= f.label :username, class: 'right inline' %>
            </div>
            <div class="small-8 columns">
              <%= f.input_field :username, :placeholder => "ExampleUsername"%>
            </div>
          </div>
        </div>
      </div> 

      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-4 columns">
              <%= f.label :name, class: 'right inline' %>
            </div>
            <div class="small-8 columns">
              <%= f.input_field :name, :placeholder => "Jessica Readman"%>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-4 columns">
              <%= f.label :password, class: 'right inline' %>
            </div>
            <div class="small-8 columns">
              <%= f.input_field :password, :placeholder => "Password"%>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-4 columns">
              <%= f.label :password_confirmation, class: 'right inline', label: 'Confirm' %>
            </div>
            <div class="small-8 columns">
              <%= f.input_field :password_confirmation, :placeholder => "Enter Password Again"%>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-4 columns">
              <%= f.label :dob, class: 'right inline' %>
            </div>
            <div class="small-8 columns">
              <%= f.input :dob, :input_html => { :class => 'dateofbirth' }, :label => "Date of Birth", :as => :date, :start_year => Date.today.year - 90, :end_year => Date.today.year - 12, :order => [:day, :month, :year], :prompt => {:day => 'Day', :month => 'Month', :year => 'Year'}, label: false %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="small-8">
          <div class="row">
            <div class="small-4 columns">
              <%= f.label :gender, class: 'right inline' %>
            </div>
            <div class="small-8 columns">
              <%= f.input_field :gender, :class => "inputdetails", :collection => [["Male", "Male"], ["Female", "Female"]], :prompt => false, label: false %>
            </div>
          </div>
        </div>
      </div>
      
      <%= f.submit "Sign up", class: "small button" %>
    <% end %>
  </div>
  
</div>

