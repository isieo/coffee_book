<%= form_tag(reviews_path) do %>
  <%= text_area_tag :comment, nil, :size => "50x3" %></br>
  <%= select_tag(:rating, options_for_select([['Awesome', '5'],['Good', '4'],['Regular', '3'], ['Poor', '2'],['Bad', '1']])) %>
  <% if post_to.class == Company%>
    <%= hidden_field_tag :company_id, post_to.id %>
  <% else %>
    <%= hidden_field_tag :user_id, post_to.id %>
  <% end %>
  <%= button_tag "Comment" %>
<% end %>
